<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_detail</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/blue_grey_dark</item>
        <item name="android:drawablePadding">@dimen/padding_activity</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:padding">@dimen/padding_activity_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>